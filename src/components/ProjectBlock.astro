---
// ProjectBlock.astro
export interface Props {
  href: string;
  title: string;
  description: string;
  tech: string[];
}

const { href, title, description, tech } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="group block border border-zinc-300 dark:border-zinc-700 bg-white dark:bg-zinc-900 p-6 transition-all shadow-[11px_10px_0px_-4px_rgba(0,0,0,0.8)] hover:shadow-[11px_10px_0px_-2px_rgba(0,0,0,0.8)]"
>
  <h3 class="text-xl font-semibold text-zinc-800 dark:text-zinc-100 mb-2">
    {title}
  </h3>
  <p class="text-sm text-zinc-600 dark:text-zinc-400 mb-4">
    {description}
  </p>
  <div class="flex flex-wrap gap-2">
    {
      tech.map((item) => (
        <span class="text-xs bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 px-2 py-1">
          {item}
        </span>
      ))
    }
  </div>
</a>
